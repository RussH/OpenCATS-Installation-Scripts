            <progressText>Mysql stuff</progressText>
        </runProgram>
        <runProgram>
            <explanation>priveleges</explanation>
            <program>echo</program>
            <programArguments>"GRANT ALL PRIVILEGES ON cats_dev.* TO 'cats'@'localhost';" | mysql --user=root</programArguments>
            <progressText>priveleges</progressText>
        </runProgram>
        <runProgram>
            <explanation>Composer stuff</explanation>
            <program>composer</program>
            <programArguments>install -d /var/www/html/opencats</programArguments>
            <progressText>Composer stuff</progressText>
        </runProgram>
